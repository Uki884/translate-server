
{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "baseUrl": "./",
    "lib": [
      "es2020",
      "dom",
      "es6"
    ],
    "types": [
        "node"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./public",
    },
    "include": [
        "**/*"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
}